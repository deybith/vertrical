{
  "name": "vertrical",
  "version": "1.0.0",
  "description": "vertrical coding challenge",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "seed": "prisma db seed",
    "migrate": "prisma migrate dev",
    "lint": "eslint \"**/*.ts*\" --ignore-pattern node_modules/ --fix",
    "build:front": "cd front && next build",
    "dev:script": "NODE_ENV=development nodemon --watch 'src/**/*.ts' --watch 'core/**/*.ts' --ignore 'src/**/*.spec.ts' --exec 'ts-node' -r tsconfig-paths/register src/main.ts",
    "dev": "yarn migrate && yarn dev:script",
    "prepare": "husky install"
  },
  "lint-staged": {
    "packages/**/*.{ts,json}": [
      "prettier --ignore-path ./.prettierignore --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@types/chai": "^4.3.0",
    "@types/express": "^4.17.13",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.18",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11",
    "@types/reactstrap": "^8.7.2",
    "@types/reflect-metadata": "^0.1.0",
    "@types/socket.io": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "dotenv": "^16.0.0",
    "eslint": "^8.9.0",
    "eslint-config-next": "12.1.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-import": "^2.25.4",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.4",
    "mocha": "^9.2.1",
    "nodemon": "^2.0.15",
    "nyc": "^15.1.0",
    "prettier": "^2.5.1",
    "sass": "^1.49.8",
    "sinon": "^13.0.1",
    "sinon-chai": "^3.7.0",
    "ts-node": "^10.5.0",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "@prisma/client": "^3.9.2",
    "@socket.io/redis-adapter": "^7.1.0",
    "axios": "^0.26.0",
    "bootstrap": "^5.1.3",
    "bootstrap-icons": "^1.8.1",
    "classnames": "^2.3.1",
    "express": "^4.17.3",
    "next": "^12.1.0",
    "next-compose-plugins": "^2.2.1",
    "prisma": "^3.9.2",
    "react": "^17.0.2",
    "react-bootstrap-icons": "^1.7.2",
    "react-dom": "^17.0.2",
    "reactstrap": "^9.0.1",
    "redis": "^4.0.3",
    "reflect-metadata": "^0.1.13",
    "socket.io": "^4.4.1",
    "winston": "^3.6.0"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
