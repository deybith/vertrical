{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "lib": [
      "dom",
      "es2017"
    ],
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "strict": false,
    "allowJs": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "isolatedModules": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "paths": {
      "@private-web/*": [
        "./*"
      ],
      "@components/*": [
        "./components/*"
      ],
      "@common/*": [
        "./common/*"
      ],
      "@layouts/*": [
        "./layouts/*"
      ],
      "@assets/*": [
        "./assets/*"
      ],
    },
    "incremental": true
  },
  "exclude": [
    "dist",
    ".next",
    "out",
    "next.config.js",
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
